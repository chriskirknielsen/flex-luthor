{
  "name": "flex-luthor",
  "version": "2.0.0",
  "description": "A small wrapper library to help with responsive intrinsic-sized Flexbox layouts that wrap based on content and container width and avoiding viewport-based media queries.",
  "main": "index.js",
  "scripts": {
    "build": "npx @11ty/eleventy --config=demo-src/eleventy.config.js --input=demo-src --output=docs",
    "serve": "npm run build -- --serve"
  },
  "keywords": [
    "responsive",
    "flexbox",
    "intrinsic",
    "css"
  ],
  "author": {
    "name": "Zach Leatherman",
    "email": "zachleatherman@gmail.com",
    "url": "https://zachleat.com/"
  },
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^0.9.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1"
  }
}
